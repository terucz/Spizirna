<Window x:Class="PAPSpizirnaProjekt.GUI.PridaniPotraviny"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PAPSpizirnaProjekt.GUI"
        mc:Ignorable="d"
        Title="PridaniPotraviny" Height="349" Width="337.775">
    <Grid Margin="0,0,431,0">
        <StackPanel HorizontalAlignment="Left" Height="261" Margin="2,0,-97,0" VerticalAlignment="Top" Width="95">
            <TextBlock HorizontalAlignment="Left" Margin="5,10,-76,0" TextWrapping="Wrap" Text="Název" VerticalAlignment="Top" Width="36"/>
            <TextBlock HorizontalAlignment="Left" Margin="5,30,-109,0" TextWrapping="Wrap" Text="Množství" VerticalAlignment="Top" Width="49"/>
            <TextBlock HorizontalAlignment="Left"  Margin="5,30,-15,0" Text="Jednotka množství" Height="19" Width="105"/>
            <TextBlock HorizontalAlignment="Left" Margin="5,30,0,0" TextWrapping="Wrap" Text="Datum spotřeby" VerticalAlignment="Top" Width="86"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Right" Height="262" Margin="0,-1,-319,0" VerticalAlignment="Top" Width="207">
            <TextBox  x:Name="nazev" Height="23" TextWrapping="Wrap" Margin="5,8,0,0" Text="Název potraviny"/>
            <TextBox  x:Name="mnozstvi" Height="23" TextWrapping="Wrap" Margin="5,23,0,0" Text="Množství potraviny"/>
            <TextBox  x:Name="jednotky" Height="23" TextWrapping="Wrap" Margin="5,23,0,0" Text="L / Kg / g / ...."/>
            <DatePicker x:Name="datumspotreby" HorizontalAlignment="Left" Margin="5,25,0,0" VerticalAlignment="Top" Width="202" Height="114"/>
        </StackPanel>
        <Button Content="Uložit" HorizontalAlignment="Left" Margin="208,280,-319,18" Width="111" RenderTransformOrigin="0.55,-0.35"/>

    </Grid>
</Window>
